        }

        table.GeneratedTable {
            left: 1000px;
            background-color: white;
            text-align: left;
            border-collapse: collapse;
            width: 100%;
        }

            table.GeneratedTable th, td {
                padding: 20px;
            }

            table.GeneratedTable thead {
                background-color: #246355;
                border-bottom: solid 5px #0F362D;
                color: white;
            }

            table.GeneratedTable tr:nth-child(even) {
                background-color: #ddd;
            }

            table.GeneratedTable tr:hover td {
                background-color: #369681;
                color: white;
            }
    </style>
</head>

<h2>Invertir En Los Proyectos Seleccionados</h2>

<form asp-action="Create" method="post">
    <div class="form-horizontal">
        <h4>Solicitud</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.FirstSurname)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.FirstSurname)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.SecondSurname)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.SecondSurname)
            </dd>
        </dl>
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <table class="GeneratedTable">
        <thead>
            <tr>
                <th>
                    Nombre
                </th>
                <th>
                    Rating
                </th>
                <th>
                    Interés
                </th>
                <th>
                    Plazo
                </th>
                <th>
                    Tipo Inversion
                </th>
                <th>
                    Cantidad
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Inversiones.Count() == 0)
            {
                <tr><td colspan="3">No hay Proyectos Disponibles</td></tr>
            }
            else
            {
                @for (int i = 0; i < Model.Inversiones.Count; i++)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem.Inversiones.ElementAt(i).Proyecto.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem.Inversiones.ElementAt(i).Proyecto.Rating)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem.Inversiones.ElementAt(i).Proyecto.Interes)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem.Inversiones.ElementAt(i).Proyecto.Plazo)
                    </td>
                    <td>
                        @* Filtrar tipo de inversión *@
                        <label asp-for="Proyecto.ProyectoTiposInversiones" class="tiposInversiones"> </label>

                        <div class="tiposInversiones2">
                            <div class="">
                                @{
                                    foreach (var item in Model.Proyecto.ProyectoTiposInversiones)
                                    {
                                        <input type="checkbox" name="ids_tiposInversiones" value="@item.TiposInversiones.Nombre" />
                                        @item.TiposInversiones.Nombre
                                        <br />
                                    }
                                }
                            </div>
                        </div>
                    </td>
                    <td>
                        @*Filtrado por Interés*@
                        <label asp-for="inversion.Cuota" class="interes"></label>
                        <input asp-for="inversion.Cuota" class="interes2" size="15" type="number" />
                    </td>
                </tr>
                }
            }
        </tbody>
    </table>
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-default" />
    </div>

</form>
<div>
    <a asp-action="SelectProyectosForSolicitud">Back to List</a>
</div>
