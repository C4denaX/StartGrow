@model StartGrow.Models.PreferenciasViewModel.SelectPreferenciasForInversorViewModel
@{
    ViewData["Title"] = "Preferencias";
}

<h2>Seleccionar tus preferencias de inversion</h2>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="SelectPreferenciasForInversor" method="post">
    <p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Selecciona el Area:
                    </th>
                    <th>
                        Selecciona el Rating:
                    </th>
                    <th>
                        Selecciona el Tipo de Inversion:
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Areas.Count() == 0)
                {
                    <tr>
                        <td colspan="3">
                            No hay Areas registradas.
                        </td>
                    </tr>
                }
                @if (Model.Rating.Count() == 0)
                {
                    <tr>
                        <td colspan="3">
                            No hay Rating registrado.
                        </td>
                    </tr>
                }
                @if (Model.TiposInversiones.Count() == 0)
                {
                    <tr>
                        <td colspan="3">
                            No hay Tipos de Inversion registrados.
                        </td>
                    </tr>
                }
                else
                {
                    <tr>
                        <td>
                            @foreach (var item in Model.Areas)
                            {
                                @Html.DisplayFor(modelItem => item.Nombre)
                                <input type="checkbox" name="IdsToAddAreas" value="@item.AreasId">
                            }
                        </td>
                        <td>
                            @foreach (var item in Model.Rating)
                            {
                                @Html.DisplayFor(modelItem => item.Nombre)
                                <input type="checkbox" name="IdsToAddAreas" value="@item.RatingId">
                            }
                        </td>
                        <td>
                            @foreach (var item in Model.TiposInversiones)
                            {
                                @Html.DisplayFor(modelItem => item.Nombre)
                                <input type="checkbox" name="IdsToAddAreas" value="@item.TiposInversionesId">
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-action="SelectPreferenciasForInversor" class="btn btn-default">Cancelar</a>
    </p>
</form>

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }